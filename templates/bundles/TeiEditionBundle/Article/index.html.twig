    </ul>
    <div class="row">
        {% embed '@TeiEdition/Article/index-listing.html.twig' %}{% endembed %}
        {% embed '@TeiEdition/Article/index-sidebar.html.twig' %}{% endembed %}
    </div><!-- .row -->
{% endblock %}
